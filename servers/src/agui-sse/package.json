    "description": "Server-Sent Events server for AGUI (Agent GUI) real-time updates",
    "type": "module",
    "main": "server.ts",
    "scripts": {
        "start": "node --loader tsx server.ts",
        "dev": "node --loader tsx --watch server.ts",
