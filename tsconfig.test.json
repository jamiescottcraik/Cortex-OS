{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist-test",
		"noEmit": true,
		"composite": false,
		"declaration": false,
		"declarationMap": false
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"simple-tests/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"vitest.config.ts",
		"vitest.basic.config.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"external/**",
		"vendor/**",
		"**/dist/**",
		"**/build/**",
		"**/*.d.ts"
	]
}