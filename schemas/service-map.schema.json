{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Service Map",
  "type": "object",
  "required": ["id", "generatedAt", "connectors", "signature"],
  "properties": {
    "id": { "type": "string", "description": "ULID" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "connectors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "scopes", "status", "ttl"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "scopes": { "type": "array", "items": { "type": "string" } },
          "quotas": { "type": "object", "additionalProperties": { "type": "integer" } },
          "timeouts": { "type": "object", "additionalProperties": { "type": "integer" } },
          "status": { "type": "string", "enum": ["enabled", "disabled"] },
          "ttl": { "type": "integer" }
        }
      }
    },
    "signature": { "type": "string" }
  }
}
