{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tutor.plan.schema.json",
  "title": "Tutor Plan",
  "description": "A minimal plan for Tutor labs and lessons.",
  "type": "object",
  "properties": {
    "goals": { "type": "array", "items": { "type": "string" } },
    "topics": { "type": "array", "items": { "type": "string" } },
    "level": { "type": "integer", "minimum": 1 },
    "labs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "outcomes": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["id", "title"]
      }
    }
  },
  "required": ["goals"]
}
