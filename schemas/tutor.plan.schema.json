{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tutor.plan.schema.json",
  "title": "Tutor Plan",
  "type": "object",
  "properties": {
    "goal": { "type": "string" },
    "topics": { "type": "array", "items": { "type": "string" } },
    "level": { "type": "integer", "minimum": 0 },
    "labs": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["goal", "topics"]
}
