# OrbStack Development Environment Configuration
# Ports configuration
NATS_PORT=4222
NATS_MANAGEMENT_PORT=8222
MODEL_GATEWAY_PORT=8081
MCP_REGISTRY_PORT=8082
WEB_PORT=3000
API_PORT=8080
GRAFANA_PORT=3001
LOKI_PORT=3100
TEMPO_PORT=3200
OTEL_HTTP_PORT=4318

# Host URLs for OrbStack integration
MLX_HOST_URL=http://host.docker.internal:8081

# Resource limits (optimized for OrbStack)
NODE_MAX_MEMORY=384
PYTHON_MAX_MEMORY=512

# Development settings
NODE_ENV=development
PYTHONUNBUFFERED=1
LOG_LEVEL=debug
RUST_LOG=debug

# OrbStack optimizations
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
BUILDX_NO_DEFAULT_ATTESTATIONS=1

# Platform targeting (OrbStack auto-detects)
DOCKER_DEFAULT_PLATFORM=linux/arm64
