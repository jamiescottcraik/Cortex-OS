		"python",
		"sbom",
		"schemas",
		"servers",
		"simple-tests",
		"src",
		"patches",
		"comparisons",
		"contracts",
		"logs",
		".github",
		".changeset",
		".husky",
		".nx",
		".vscode",
		".semgrep",
            ".husky",
		".claude",
		"node_modules",
		"dist",
		"pnpm-workspace.yaml",
		"turbo.json",
		"package.json",
		"tsconfig.json",
		"tsconfig.base.json",
		"tsconfig.eslint.json",
		"pyproject.toml",
		"uv.toml",
		"uv.lock",
		"nx.json",
		"vitest.config.ts",
		"vitest.workspace.ts",
		"vitest.basic.config.ts",
		"vitest.fuzz.config.ts",
