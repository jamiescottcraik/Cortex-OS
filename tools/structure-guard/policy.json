		"GITHUB_COPILOT_CONFIGURATION.md",
		"README-CORTEX-CLI-UPGRADE.md",
		"WEBHOOK_SECRET_SETUP.md",
		"LLMs.txt"
	],
	"filePatterns": {
		"typescript": {
			"required": ["package.json", "tsconfig.json"],
			"requireOneOf": ["src/index.ts", "src/index.js", "index.ts"],
			"allowed": [
				"*.ts",
				"*.tsx",
				"*.js",
				"*.json",
				"*.md",
				"tests/**/*",
				"**/*.spec.ts",
				"**/*.test.ts"
			]
		},
		"python": {
			"required": ["pyproject.toml"],
			"requireOneOf": ["src/__init__.py", "__init__.py", "src/main.py"],
			"allowed": [
				"*.py",
				"*.pyi",
				"*.toml",
				"*.md",
				"tests/**/*",
				"**/*_test.py",
				"**/test_*.py"
			]
		}
	},
	"maxFilesPerChange": 15,
	"overrideRules": {
		"migrationMode": false,
		"overrideRequiresApproval": ["@cortex-os/architects"],
		"maxFilesWithOverride": 50
	},
	"protectedFiles": [
		"apps/cortex-os/**",
		"packages/memories/**",
		"packages/orchestration/**",
		"packages/a2a/**",
		"packages/mcp/**",
		"packages/rag/**",
		"packages/simlab/**"
	],
	"allowedGlobs": [
		"apps/**",
		"packages/**",
		"tools/**",
		"docs/**",
		"scripts/**",
		"tests/**",
		"config/**",
		"examples/**",
		"reports/**",
		"tmp/**",
		"bin/**",
		"infra/**",
