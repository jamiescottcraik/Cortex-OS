		"**/.env*",
		"**/package-lock.json",
		"**/yarn.lock",
		"**/pnpm-lock.yaml",
		"**/.venv*/**",
		"**/venv/**",
		"**/__pycache__/**",
		"**/*.pyc",
		"**/*.pyo",
		"**/.pytest_cache/**"
	],
	"allowedPaths": {
		"apps": ["cortex-os"],
		"apps/cortex-os/packages": ["agents", "mvp", "mvp-core", "mvp-server"],
		"packages": ["a2a", "mcp", "memories", "orchestration", "simlab", "rag"],
		"services": ["ml-inference", "data-pipeline"],
		"libs/typescript": [
			"accessibility",
			"contracts",
			"errors",
			"telemetry",
			"testing",
			"types",
			"utils"
		],
		"libs/python": ["cortex_core", "cortex_ml"],
		"tools": [
			"structure-guard",
			"eslint-config",
			"lockfile-sync",
			"schemas",
			"scripts",
			"python"
		],
		".cortex": [
			"rules",
			"prompts",
			"audit",
			"commands",
			"context",
			"docs",
			"gates",
			"indexes",
			"library",
			"policy",
			"reports",
			"runbooks",
			"schemas",
			"tooling",
			"tools"
		],
		"docs": ["architecture", "reports", "analysis"],
		"scripts": ["maintenance"],
		"tmp": ["build-artifacts"]
	},
	"allowedRootEntries": [
		".cortex",
		"apps",
		"packages",
		"libs",
