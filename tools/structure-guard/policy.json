		"dist/**",
		"tsconfig*.json",
		"package.json",
		"pnpm-workspace.yaml",
		"vitest*.config.ts",
		"Dockerfile*",
		"Makefile",
		"LICENSE",
		"NOTICE",
		"*.md",
		"*.txt",
		"*.json",
		"*.js",
		"*.mjs",
		"*.cjs",
		"*.ts",
		"*.py",
		"*.yaml",
		"*.yml",
		"*.toml",
		"*.lock",
