{
	"version": "2.0.0",
	"excludePatterns": [
		"**/node_modules/**",
		"**/dist/**",
		"**/build/**",
		"**/.git/**",
		"**/.next/**",
		"**/.cache/**",
		"**/coverage/**",
		"**/.nyc_output/**",
		"**/tmp/**",
		"**/temp/**",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/.vscode/settings.json",
