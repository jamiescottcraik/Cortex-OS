		".semgrep.yml",
		".hadolint.yaml",
		".lighthouserc.js",
		".lintstagedrc.json",
		".mermaidrc",
		".mise.toml",
		".tool-versions",
		".vitestrc",
		".pre-commit-config.yaml",
		".budget.yml",
