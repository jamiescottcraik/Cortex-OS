{
  "name": "brAInwav Cortex-OS Quality Gates",
  "version": "1.0.0",
  "enforcer": "brAInwav Development Team",
  "lastUpdated": "2025-10-04",
  "description": "Production-ready quality gates enforcing brAInwav standards for Cortex-OS",
  "thresholds": {
    "coverage": {
      "line": 95,
      "branch": 95,
      "function": 90,
      "statement": 90,
      "enforcement": "strict"
    },
    "mutation": {
      "score": 80,
      "enforcement": "strict",
      "minTestsPerMutant": 2
    },
    "performance": {
      "p95Latency": 250,
      "errorRate": 0.005,
      "throughput": 100,
      "units": {
        "latency": "ms",
        "errorRate": "percentage",
        "throughput": "rps"
      }
    },
    "security": {
      "criticalVulnerabilities": 0,
      "highVulnerabilities": 0,
      "mediumVulnerabilities": 5,
      "dependencyAudit": "required"
    },
    "codeQuality": {
      "complexityThreshold": 10,
      "duplicateCodeThreshold": 3,
      "maxFunctionLength": 40,
      "enforceCodeStyle": true
    },
    "operationalReadiness": {
      "healthCheckCoverage": 100,
      "gracefulShutdown": "required",
      "observabilityScore": 95,
      "loggingStandard": "brAInwav"
    }
  },
  "enforcement": {
    "prGate": {
      "enabled": true,
      "requiredChecks": [
        "coverage",
        "mutation",
        "security",
        "codeQuality"
      ]
    },
    "releaseGate": {
      "enabled": true,
      "requiredChecks": [
        "coverage",
        "mutation", 
        "performance",
        "security",
        "operationalReadiness"
      ]
    },
    "ratcheting": {
      "enabled": true,
      "baselineFile": "reports/baseline/coverage.json",
      "allowRegresssion": false
    }
  },
  "branding": {
    "organization": "brAInwav",
    "enforceInLogs": true,
    "enforceInErrors": true,
    "enforceInMetrics": true,
    "brandingMessage": "Powered by brAInwav Development Standards"
  },
  "exemptions": {
    "testFiles": {
      "patterns": ["**/*.test.ts", "**/*.spec.ts", "**/test/**/*"],
      "appliedThresholds": ["complexityThreshold"]
    },
    "legacyCode": {
      "patterns": ["legacy/**/*"],
      "appliedThresholds": ["maxFunctionLength"],
      "expiryDate": "2025-12-31"
    }
  }
}