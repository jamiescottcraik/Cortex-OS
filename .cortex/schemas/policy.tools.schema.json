{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "ToolGrant",
	"type": "object",
	"properties": {
		"tool": { "type": "string" },
		"actions": { "type": "array", "items": { "type": "string" } },
		"args": { "type": "object", "additionalProperties": true },
		"dataClass": { "enum": ["public", "internal", "sensitive"] },
		"rate": {
			"type": "object",
			"properties": { "perMinute": { "type": "integer", "minimum": 1 } },
			"required": ["perMinute"]
		},
		"fsScope": { "type": "array", "items": { "type": "string" } }
	},
	"required": ["tool", "actions", "rate"]
}
