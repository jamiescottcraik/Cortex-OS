{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cortex-os.dev/schemas/policy.agents.json",
  "title": "Agent Permissions Policy",
  "type": "object",
  "required": ["version", "agents"],
  "properties": {
    "version": { "type": "string" },
    "agents": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "required": ["allowedTools", "quotas"],
          "properties": {
            "allowedTools": { "type": "array", "items": { "type": "string" } },
            "quotas": {
              "type": "object",
              "properties": {
                "fileOps": { "type": "integer" },
                "networkCalls": { "type": "integer" },
                "computeMinutes": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  }
}
