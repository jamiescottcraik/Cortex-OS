{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Tool Schema",
  "description": "Schema for MCP tool definitions and calls",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
      "description": "Tool identifier"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "inputSchema": {
      "type": "object",
      "$ref": "http://json-schema.org/draft-07/schema#",
      "description": "JSON Schema for tool input validation"
    },
    "security": {
      "type": "object",
      "properties": {
        "allowlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Agents allowed to call this tool"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "read",
              "write", 
              "execute",
              "network",
              "filesystem"
            ]
          }
        },
        "sandbox": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["permissions"]
    },
    "cost": {
      "type": "object",
      "properties": {
        "maxCostUsd": {
          "type": "number",
          "minimum": 0
        },
        "estimatedLatencyMs": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  },
  "required": [
    "name",
    "description", 
    "inputSchema",
    "security"
  ]
}