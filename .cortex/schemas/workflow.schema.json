{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://cortex.local/schemas/workflow.schema.json",
	"type": "object",
	"properties": {
		"id": { "type": "string" },
		"name": { "type": "string" },
		"steps": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"type": { "type": "string" },
					"deps": { "type": "array", "items": { "type": "string" } }
				},
				"required": ["id", "type"]
			}
		}
	},
	"required": ["id", "name", "steps"]
}
