{
  "$schema": "../schemas/egress.allowlist.schema.json",
  "version": "1.0",
  "policy": {
    "privacy_mode": false,
    "frontier_providers": [
      {
        "name": "anthropic",
        "hosts": ["api.anthropic.com"],
        "rate_limit": {
          "requests_per_minute": 60,
          "tokens_per_day": 1000000
        }
      },
      {
        "name": "openai",
        "hosts": ["api.openai.com"],
        "rate_limit": {
          "requests_per_minute": 100,
          "tokens_per_day": 2000000
        }
      }
    ]
  }
}
