{
  "version": "1.0.0",
  "allowedPaths": {
    "apps": ["cortex-os"],
    "packages": ["a2a", "mcp", "memories", "orchestration", "rag", "simlab"],
    "services": ["ml-inference", "data-pipeline"],
    "libs": ["typescript"],
    "tools": ["structure-guard", "eslint-config"]
  },
  "fileTypes": {
    "allowed": [
      "*.ts", "*.tsx", "*.js", "*.jsx", "*.json", "*.md", "*.yml", "*.yaml",
      "*.py", "*.pyi", "*.toml", "*.txt", "*.css", "*.scss", "*.html"
    ],
    "blocked": [
      "*.log", "*.cache", "*.tmp", "*.sqlite", "*.db"
    ]
  },
  "sizeLimits": {
    "maxFileSize": "10MB",
    "maxTotalSize": "100MB"
  }
}
