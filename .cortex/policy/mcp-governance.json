{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "MCP Governance Policy",
  "description": "Security and governance policies for MCP server marketplace",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "security": {
      "type": "object",
      "properties": {
        "riskLevels": {
          "type": "object",
          "properties": {
            "allowed": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              },
              "default": ["low", "medium"]
            },
            "requireApproval": {
              "type": "array", 
              "items": {
                "type": "string",
                "enum": ["medium", "high"]
              },
              "default": ["high"]
            }
          }
        },
        "signatures": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean",
              "default": true
            },
            "trustedPublishers": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "ModelContextProtocol",
                "Anthropic",
                "GitHub"
              ]
            },
            "sigstoreValidation": {
              "type": "boolean", 
              "default": true
            }
          }
        },
        "permissions": {
          "type": "object",
          "properties": {
            "dangerous": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "system:exec",
                "system:admin", 
                "files:write:root",
                "network:raw"
              ]
            },
            "requireConfirmation": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "files:write",
                "system:exec",
                "network:external"
              ]
            }
          }
        }
      },
      "required": ["riskLevels", "signatures", "permissions"]
    },
    "marketplace": {
      "type": "object",
      "properties": {
        "registries": {
          "type": "object",
          "properties": {
            "official": {
              "type": "string",
              "format": "uri",
              "default": "https://registry.cortex-os.dev/v1/registry.json"
            },
            "community": {
              "type": "string", 
              "format": "uri",
              "default": "https://community.mcp.dev/v1/registry.json"
            },
            "allowCustom": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "caching": {
          "type": "object",
          "properties": {
            "ttl": {
              "type": "number",
              "default": 300000,
              "description": "Cache TTL in milliseconds (5 minutes)"
            },
            "maxSize": {
              "type": "number",
              "default": 104857600,
              "description": "Max cache size in bytes (100MB)"
            }
          }
        },
        "validation": {
          "type": "object",
          "properties": {
            "strictMode": {
              "type": "boolean",
              "default": true
            },
            "allowPrerelease": {
              "type": "boolean",
              "default": false
            },
            "minRating": {
              "type": "number",
              "minimum": 0,
              "maximum": 5,
              "default": 3.0
            }
          }
        }
      }
    },
    "installation": {
      "type": "object", 
      "properties": {
        "sandboxed": {
          "type": "boolean",
          "default": true
        },
        "isolatedEnvironments": {
          "type": "boolean",
          "default": true
        },
        "resourceLimits": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "default": "512MB"
            },
            "cpu": {
              "type": "string", 
              "default": "0.5"
            },
            "diskSpace": {
              "type": "string",
              "default": "1GB"
            }
          }
        },
        "networkAccess": {
          "type": "object",
          "properties": {
            "allowed": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": ["https://api.github.com", "https://registry.npmjs.org"]
            },
            "blocked": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": ["file://", "ftp://"]
            }
          }
        }
      }
    },
    "audit": {
      "type": "object",
      "properties": {
        "logging": {
          "type": "object",
          "properties": {
            "level": {
              "type": "string",
              "enum": ["debug", "info", "warn", "error"],
              "default": "info"
            },
            "destinations": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": ["file", "syslog"]
            }
          }
        },
        "monitoring": {
          "type": "object",
          "properties": {
            "healthChecks": {
              "type": "boolean",
              "default": true
            },
            "performanceMetrics": {
              "type": "boolean", 
              "default": true
            },
            "securityEvents": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  },
  "required": ["security", "marketplace", "installation", "audit"]
}