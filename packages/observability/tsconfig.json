{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		// Ensure modern package resolution for ESM packages with package.json exports
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules",
		"tests"
	]
}
