{
  "name": "@cortex-os/gateway",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json && node ./scripts/build-openapi.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "node ./scripts/build-openapi.cjs && vitest run",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "fastify": "^4.28.1",
    "zod": "^3.23.8",
    "zod-to-openapi": "^0.2.1",
    "prom-client": "^15.1.3",
    "@cortex-os/contracts": "workspace:*",
    "@cortex-os/mcp": "workspace:*",
    "@cortex-os/a2a": "workspace:*",
    "@cortex-os/rag": "workspace:*",
    "@cortex-os/simlab": "workspace:*"
  },
  "devDependencies": {
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@types/node": "^22.5.0",
    "@pact-foundation/pact": "^12.2.0"
  }
}
