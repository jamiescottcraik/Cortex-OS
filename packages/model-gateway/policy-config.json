{
    "version": "1.0.0",
    "services": {
        "model-gateway": {
            "actions": [
                "embeddings",
                "rerank",
                "chat"
            ],
            "rateLimits": {
                "perMinute": 100,
                "perHour": 5000,
                "perDay": 50000
            },
            "rules": {
                "allow_embeddings": true,
                "allow_rerank": true,
                "allow_chat": true,
                "routing": [
                    {
                        "condition": "model.startsWith('gpt')",
                        "destination": "frontier",
                        "priority": 90
                    },
                    {
                        "condition": "model.startsWith('llama')",
                        "destination": "ollama",
                        "priority": 80
                    },
                    {
                        "condition": "model.startsWith('qwen')",
                        "destination": "mlx",
                        "priority": 100,
                        "fallback": [
                            "ollama"
                        ]
                    }
                ]
            }
        }
    },
    "global": {
        "defaultRateLimit": {
            "perMinute": 60
        }
    }
}
