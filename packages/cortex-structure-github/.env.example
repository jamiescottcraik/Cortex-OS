# Cortex Structure Guard GitHub App Environment Variables
# Copy this to .env and fill in your values

# GitHub token with repository access (required)
GITHUB_TOKEN=ghp_your_token_here

# Webhook secret (must match the secret in your GitHub App settings)
WEBHOOK_SECRET=your_webhook_secret_here

# GitHub App credentials (optional, for advanced features)
STRUCTURE_APP_ID=your_github_app_id_here
STRUCTURE_PRIVATE_KEY=your_github_app_private_key_here

# Server port (default: 3003)
PORT=3003

# Auto-fix settings
AUTO_FIX_ENABLED=false
DRY_RUN=true

# Development settings
NODE_ENV=development

# Cloudflare Tunnel Configuration
TUNNEL_HOSTNAME=insula-github.brainwav.io
TUNNEL_CONFIG_PATH=infrastructure/cloudflare/tunnel.config.yml

# Structure Validation Settings
MAX_AUTO_FIXES_PER_PR=10
VALIDATE_ON_PUSH=true
VALIDATE_ON_PR=true
ENFORCE_PACKAGE_STRUCTURE=true
ENFORCE_DOCS_STRUCTURE=true
ENFORCE_CONFIG_STRUCTURE=true
ENFORCE_TESTS_STRUCTURE=true

# Security and Rate Limiting
WEBHOOK_VERIFY_SIGNATURE=true
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=info
ENABLE_METRICS=true
