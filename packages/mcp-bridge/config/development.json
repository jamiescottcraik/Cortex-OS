{
  "$schema": "../../schemas/mcp-config.schema.json",
  "version": "1",
  "security": {
    "policy": "default-allow",
    "allowlist": {
      "connectors": ["local-fs", "github-api", "context7"],
      "protocols": ["json-rpc-2.0"],
      "methods": [
        "tools/list",
        "tools/call",
        "resources/list",
        "resources/read",
        "resources/subscribe"
      ]
    },
    "network": {
      "egress": "enabled",
      "allowedDomains": ["github.com", "api.github.com"],
      "maxRequestSize": "10MB",
      "timeout": 60000
    }
  },
  "audit": {
    "enabled": true,
    "format": "jsonl",
    "logLevel": "debug",
    "destination": "./logs/mcp-audit-dev.jsonl",
    "rotateDaily": false,
    "retentionDays": 7
  },
  "tools": [
    {
      "id": "local-fs-full",
      "server": "local-fs",
      "scopes": ["read", "write"],
      "meta": {
        "description": "Local filesystem full access for development",
        "sandboxed": false,
        "maxFileSize": "100MB"
      }
    },
    {
      "id": "github-api-full",
      "server": "github-api",
      "scopes": ["read", "write", "metadata"],
      "meta": {
        "description": "GitHub API full access for development",
        "rateLimited": false
      }
    },
    {
      "id": "context7-dev",
      "server": "context7",
      "scopes": ["read", "analyze"],
      "meta": {
        "description": "Context7 connector for development only",
        "environment": "development"
      }
    }
  ],
  "registry": {
    "local-fs": "@cortex-os/mcp-local-fs",
    "github-api": "@cortex-os/mcp-github-api",
    "context7": "@cortex-os/mcp-context7"
  }
}
