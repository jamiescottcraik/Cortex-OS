{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/types.ts",
    "src/mcp-config-storage.ts",
    "src/cli/mcp.ts",
    "src/types/*.d.ts"
  ],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
