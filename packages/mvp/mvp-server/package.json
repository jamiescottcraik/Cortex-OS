    "zod": "^3.23.8",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "eslint": "^8.39.1",
    "tsup": "^8.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
