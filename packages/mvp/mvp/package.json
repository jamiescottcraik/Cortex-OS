{
  "name": "@cortex-os/mvp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node ../../../scripts/vitest-safe.mjs run",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "vitest --coverage",
    "test:ci": "node ../../../scripts/vitest-safe.mjs run --coverage --reporter=verbose",
    "gates:determinism": "node ../../../scripts/vitest-safe.mjs run tests/determinism.test.ts --reporter=dot",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "test:safe": "node ../../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "@cortex-os/kernel": "workspace:*",
    "@cortex-os/mvp-core": "workspace:*",
    "@cortex-os/prp-runner": "workspace:*",
    "glob": "^10.3.10",
    "nanoid": "^5.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^8.53.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}