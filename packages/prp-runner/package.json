{
  "name": "@cortex-os/prp-runner",
  "version": "1.0.0",
  "description": "Production-grade PRP Neural Orchestration Engine",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./orchestrator": "./dist/orchestrator.js",
    "./neurons": "./dist/neurons/index.js",
    "./tools": "./dist/tools/index.js",
    "./validation": "./dist/validation/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:watch": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "test:coverage": "vitest --coverage",
    "test:ci": "node ../../scripts/vitest-safe.mjs run --coverage --reporter=verbose",
    "tdd:red": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "tdd:green": "echo 'TDD Phase 2: Make test pass' && vitest run",
    "tdd:refactor": "echo 'DISABLED: watch/UI mode blocked for memory safety'",
    "gates:tdd": "node ../../scripts/vitest-safe.mjs run --coverage --reporter=dot && echo 'TDD gates passed: All tests pass with 85%+ coverage'",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "precommit": "pnpm gates:tdd && pnpm lint",
    "demo:semsearch": "tsx scripts/semantic-search-demo.ts",
    "demo:mcp": "tsx scripts/mcp-http-demo.ts",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "@cortex-os/a2a": "workspace:*",
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/kernel": "workspace:*",
    "axe-core": "^4.9.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "execa": "^9.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.3.1",
    "glob": "^10.4.2",
    "inquirer": "^9.2.12",
    "lighthouse": "^11.4.0",
    "node-llama-cpp": "^3.1.0",
    "ollama": "^0.5.17",
    "ora": "^7.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cortex-os/a2a": "workspace:*",
    "@types/express": "^4.17.21",
    "@xenova/transformers": "^2.17.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.53.0",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "nx": {
    "targets": {
      "demo:semsearch": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm -C packages/prp-runner demo:semsearch"
        }
      },
      "demo:mcp": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm -C packages/prp-runner demo:mcp"
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "orchestration",
    "neural",
    "prp",
    "cortex",
    "production"
  ],
  "author": "Cortex-OS Team",
  "license": "(Apache-2.0 OR Commercial)"
}
