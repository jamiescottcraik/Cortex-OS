{
	"name": "@cortex-os/mcp-core",
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "packages/mcp-core/src",
	"targets": {
		"build": {
			"executor": "@nx/rollup:rollup",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/mcp-core",
				"tsConfig": "packages/mcp-core/tsconfig.lib.json",
				"project": "packages/mcp-core/package.json",
				"entryFile": "packages/mcp-core/src/index.ts",
				"external": ["rxjs/operators", "rxjs/websocket", "rxjs/ajax"]
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"options": {
				"lintFilePatterns": ["packages/mcp-core/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nx/vite:test",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"configFile": "packages/mcp-core/vitest.config.ts",
				"passWithNoTests": true,
				"watch": false
			},
			"configurations": {
				"ci": {
					"coverage": true
				}
			}
		}
	},
	"tags": ["scope:mcp", "type:lib"]
}
