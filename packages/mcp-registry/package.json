{
  "name": "@cortex-os/mcp-registry",
  "version": "1.0.0",
  "description": "MCP Server Registry with schema validation and signing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./schemas": "./schemas/index.js",
    "./cli": "./dist/cli.js",
    "./fs-store": "./dist/fs-store.js"
  },
  "bin": {
    "mcp-validate": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "node -e \"process.exit(0)\"",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "validate": "node dist/cli.js",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^11.1.0",
    "zod": "^3.22.4",
    "@noble/hashes": "^1.4.0",
    "@noble/ed25519": "^2.1.0",
    "@cortex-os/mcp-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3"
  },
  "files": [
    "dist/",
    "schemas/"
  ]
}
