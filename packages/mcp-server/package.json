{
  "name": "@cortex-os/mcp-server",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "engines": {
    "node": ">=18 <=22"
  },
  "scripts": {
    "dev": "node --watch --enable-source-maps --trace-warnings ./dist/server.js",
    "build": "tsc -p tsconfig.json",
    "start": "node --enable-source-maps ./dist/server.js",
    "check:node": "node -e \"const v=process.versions.node.split('.')[0]; if(+v>22||+v<18) process.exit(1)\" && echo OK",
    "lint": "eslint ."
  },
  "dependencies": {
    "vite": "^6.0.7",
    "vitest": "^3.2.4",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^8.39.1",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.5.1",
    "typescript": "^5.6.2"
  }
}
