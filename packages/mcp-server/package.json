{
  "name": "@cortex-os/mcp-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:http": "node dist/index.js --transport http --port 9600"
  },
  "dependencies": {
    "@cortex-os/memory-core": "workspace:*",
    "@cortex-os/tool-spec": "workspace:*",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pino": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.18.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tsx": "^4.19.1"
  }
}