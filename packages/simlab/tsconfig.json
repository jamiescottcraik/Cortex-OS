{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@cortex-os/prp-runner": [
        "../prp-runner/dist/index.d.ts"
      ],
      "@cortex-os/prp-runner/*": [
        "../prp-runner/dist/*"
      ],
      "@cortex-os/kernel": [
        "../kernel/dist/index.d.ts" 
      ],
      "@cortex-os/kernel/*": [
        "../kernel/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}