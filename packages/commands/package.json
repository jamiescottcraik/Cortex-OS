{
  "name": "@cortex-os/commands",
  "version": "0.1.0",
  "description": "Slash command loader/parser/runner for Cortex-OS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@cortex-os/agents": "workspace:*",
    "@cortex-os/observability": "workspace:*",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^16.3.0",
    "micromatch": "^4.0.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
