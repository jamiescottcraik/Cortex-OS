{
	"name": "@cortex-os/asbr",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"description": "Agentic Second-Brain Runtime (ASBR) - Brain-only orchestration and knowledge runtime",
	"keywords": [
		"asbr",
		"cortex-os",
		"brain-only",
		"orchestration",
		"second-brain",
		"local-first",
		"a11y",
		"wcag",
		"mcp"
	],
	"license": "(Apache-2.0 OR Commercial)",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"cortex-asbr": "dist/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./sdk": "./dist/sdk.js",
		"./api": "./dist/api.js",
		"./types": "./dist/types.d.ts"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc --build --incremental",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:a11y": "vitest run --config vitest.a11y.config.ts",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"clean": "rm -rf dist tsconfig.tsbuildinfo",
		"typecheck": "tsc --noEmit --incremental",
		"build:fast": "tsc --build --incremental --assumeChangesOnlyAffectDirectDependencies",
		"build:prod": "NODE_ENV=production tsc --build --incremental"
	},
	"dependencies": {
		"crypto": "^1.0.1",
		"diff": "^8.0.2",
		"express": "^5.1.0",
		"fast-xml-parser": "^5.2.5",
		"js-yaml": "^4.1.0",
		"micromatch": "^4.0.8",
		"pidusage": "^3.0.2",
		"socket.io": "^4.8.1",
		"uuid": "^11.1.0",
		"ws": "^8.18.0",
		"zlib": "1.0.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.2.1",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.33.0",
		"socket.io-client": "^4.8.1",
		"supertest": "^7.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
