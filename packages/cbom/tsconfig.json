{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["es2022"],
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "vitest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "cli/**/*.ts", "tests/**/*.ts"],
  "exclude": ["dist", "coverage"]
}
