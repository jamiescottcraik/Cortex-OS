{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "name": "security",
  "sourceRoot": "packages/security/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "main": "packages/security/src/index.ts",
        "tsConfig": "packages/security/tsconfig.json",
        "assets": [],
        "external": [
          "@cortex-os/a2a-contracts",
          "@cortex-os/utils",
          "@cortex-os/telemetry"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/security/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/vitest:vitest",
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "options": {
        "config": "packages/security/vitest.config.ts"
      }
    }
  },
  "tags": [
    "scope:security",
    "type:shared"
  ],
  "implicitDependencies": []
}
