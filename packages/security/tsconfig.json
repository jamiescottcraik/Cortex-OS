{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": ["./src/*"],
			"@cortex-os/a2a-contracts": ["../../packages/a2a/a2a-contracts/src"],
			"@cortex-os/utils": ["../../libs/typescript/utils/src"],
			"@cortex-os/telemetry": ["../../libs/typescript/telemetry/src"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
