{
  "name": "@cortex-os/registry",
  "version": "1.0.0",
  "type": "module",
  "description": "Schema registry service for Cortex-OS contracts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "node ../../scripts/vitest-safe.mjs run",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run --coverage --coverage.threshold.lines 95",
    "test:watch": "node ../../scripts/vitest-safe.mjs run",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test:safe": "node ../../scripts/vitest-safe.mjs run"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "pino": "^9.9.2",
    "prom-client": "^15.1.3",
    "zod": "^3.25.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.12",
    "supertest": "^6.3.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
