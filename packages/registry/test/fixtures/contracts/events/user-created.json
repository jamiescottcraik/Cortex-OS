{
	"$id": "user-created",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "User Created Event",
	"description": "CloudEvent schema for user creation",
	"type": "object",
	"required": ["specversion", "type", "source", "id", "data"],
	"properties": {
		"specversion": {
			"type": "string",
			"enum": ["1.0"]
		},
		"type": {
			"type": "string",
			"const": "com.cortex.user.created"
		},
		"source": {
			"type": "string",
			"format": "uri-reference"
		},
		"id": {
			"type": "string"
		},
		"time": {
			"type": "string",
			"format": "date-time"
		},
		"data": {
			"type": "object",
			"required": ["userId", "email", "username"],
			"properties": {
				"userId": {
					"type": "string",
					"format": "uuid"
				},
				"email": {
					"type": "string",
					"format": "email"
				},
				"username": {
					"type": "string",
					"minLength": 3,
					"maxLength": 50
				},
				"createdAt": {
					"type": "string",
					"format": "date-time"
				}
			}
		}
	}
}
