{
  "extends": "../../tsconfig.json",
  "include": [
    "src/index.ts",
    "src/types.ts",
    "src/types/**/*.d.ts",
    "src/utils/dsp.ts",
    "src/lib/long-horizon-planner.ts",
    "src/coordinator/**/*.ts",
    "src/langgraph/create-cerebrum-graph.ts",
    "src/langgraph/planning-orchestrator.ts",
    "src/langgraph/n0-state.ts",
    "src/langgraph/n0-adapters.ts",
    "src/observability/**/*.ts",
    "src/master-agent-loop/**/*.ts",
    "src/bridges/**/*.ts",
    "src/langgraph/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "examples/**",
    "src/lib/outbox/**",
    "tests/**",
    "__tests__/**",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/lib/supervisor.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": "../../"
  },
  "references": [
    {
      "path": "../../packages/hooks"
    }
  ]
}
