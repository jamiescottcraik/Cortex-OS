{
  "name": "@cortex-os/rag",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "node ../../scripts/vitest-safe.mjs run -c vitest.config.ts",
    "test:coverage": "node ../../scripts/vitest-safe.mjs run -c vitest.config.ts --coverage --coverage.reporter=json-summary --coverage.reporter=text-summary",
    "verify:coverage": "node ./scripts/verify-coverage.mjs",
    "verify:coverage:auto": "node ./scripts/verify-coverage.mjs --auto-raise",
    "verify:coverage:dry": "node ./scripts/verify-coverage.mjs --auto-raise --dry-run",
    "docs:verify": "./scripts/verify-docs.sh",
    "test:safe": "node ../../scripts/vitest-safe.mjs run",
    "security:scan": "pnpm -w security:scan:diff || pnpm -w security:scan"
  },
  "dependencies": {
    "@cortex-os/contracts": "workspace:*",
    "@cortex-os/model-gateway": "workspace:*",
    "@cortex-os/agents": "workspace:*",
    "@cortex-os/observability": "workspace:*",
    "@cortex-os/a2a-contracts": "workspace:*",
    "@cortex-os/a2a-core": "workspace:*",
    "@cortex-os/a2a-transport": "workspace:*"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.5.0",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9",
    "eslint": "^9.35.0"
  },
  "optionalDependencies": {
    "pg": "^8.16.3"
  }
}
