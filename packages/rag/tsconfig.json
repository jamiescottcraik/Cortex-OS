{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"fast-glob": [
				"src/stubs/fast-glob.ts"
			],
			"micromatch": [
				"src/stubs/micromatch.ts"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/types/shims.d.ts"
	],
	"exclude": [
		"src/**/*.js",
		"dist"
	]
}
