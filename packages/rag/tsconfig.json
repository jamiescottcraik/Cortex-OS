{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noEmit": false,
    "paths": {
      "fast-glob": [
        "src/stubs/fast-glob.ts"
      ],
      "micromatch": [
        "src/stubs/micromatch.ts"
      ]
    }
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/integrations/archon-mcp.ts"
  ]
}
