{
  "name": "@cortex-os/mcp",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "default": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./client": {
      "default": "./src/client.ts",
      "types": "./src/client.ts"
    },
    "./server": {
      "default": "./src/server.ts",
      "types": "./src/server.ts"
    },
    "./bridge": {
      "default": "./src/bridge.ts",
      "types": "./src/bridge.ts"
    },
    "./registry": {
      "default": "./src/registry.ts",
      "types": "./src/registry.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@cortex-os/contracts": "workspace:*",
    "@cortex-os/mcp-core": "workspace:*",
    "@cortex-os/mcp-transport-bridge": "workspace:*",
    "@cortex-os/mcp-registry": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
