# =============================================================================
# Cortex Memories - Environment Configuration
# =============================================================================

# =============================================================================
# Store Configuration
# =============================================================================
# Memory store adapter: local | sqlite | external-sqlite | prisma | memory
MEMORIES_STORE_ADAPTER=external-sqlite

# External Storage Configuration
MEMORIES_EXTERNAL_STORAGE_ENABLED=true
MEMORIES_EXTERNAL_STORAGE_PREFERRED_PATH=/Volumes/ExternalSSD/cortex-memories
MEMORIES_EXTERNAL_STORAGE_FALLBACK_PATHS=/Volumes/ExternalHDD/cortex-memories,./data
MEMORIES_EXTERNAL_STORAGE_DB_NAME=memories.db
MEMORIES_EXTERNAL_STORAGE_MAX_SIZE_GB=1000
MEMORIES_EXTERNAL_STORAGE_MONITOR_INTERVAL_MS=30000

# SQLite Configuration (if using SQLite)
MEMORIES_SQLITE_PATH=./data/memories.db

# Local Memory MCP Configuration
LOCAL_MEMORY_BASE_URL=http://localhost:3002/api/v1
LOCAL_MEMORY_API_KEY=
LOCAL_MEMORY_NAMESPACE=default

# =============================================================================
# Security Configuration
# =============================================================================
# Encryption secret (32+ characters for AES-256)
ENCRYPTION_SECRET=your-super-secret-encryption-key-min-32-chars

# Namespaces to encrypt (comma-separated)
MEMORIES_ENCRYPTION_NAMESPACES=secure,pii

# Regex pattern for encryption
MEMORIES_ENCRYPTION_REGEX=^sec:

# Enable encryption for vectors
MEMORIES_ENCRYPT_VECTORS=false

# Enable encryption for tags
MEMORIES_ENCRYPT_TAGS=false

# Access Control
MEMORIES_ACCESS_CONTROL_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================
# Enable caching
MEMORIES_CACHE_ENABLED=true

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# Enable connection pooling
MEMORIES_CONNECTION_POOL_ENABLED=true
MEMORIES_CONNECTION_POOL_MIN=2
MEMORIES_CONNECTION_POOL_MAX=10

# Enable compression
MEMORIES_COMPRESSION_ENABLED=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Enable monitoring
MEMORIES_MONITORING_ENABLED=true

# Monitoring port for dashboard
MEMORIES_MONITORING_PORT=3001

# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# Enable distributed tracing
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Node environment
NODE_ENV=production

# =============================================================================
# High Availability Configuration
# =============================================================================
# Enable HA features
MEMORIES_HA_ENABLED=false

# Enable replication
MEMORIES_REPLICATION_ENABLED=false

# Comma-separated list of replication peers
REPLICATION_PEERS=

# Enable clustering
MEMORIES_CLUSTER_ENABLED=false

# =============================================================================
# Backup Configuration
# =============================================================================
# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# S3 bucket for backups
BACKUP_S3_BUCKET=

# AWS credentials for S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Deployment Stage
# =============================================================================
# Set to stage1 | stage2 | stage3
DEPLOYMENT_STAGE=stage1