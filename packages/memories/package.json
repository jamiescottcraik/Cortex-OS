{
  "name": "@cortex-os/memories",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:gen": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "test:coverage": "vitest --coverage",
    "jsonl:import": "tsx src/tools/jsonl-to-memory.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "zod": "^3.23.8",
    "better-sqlite3": "^11.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "eslint": "^9.33.0",
    "prisma": "^5.18.0",
    "@types/better-sqlite3": "^7.6.9",
    "tsup": "^8.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "@prisma/client": "^5.18.0"
  }
}
