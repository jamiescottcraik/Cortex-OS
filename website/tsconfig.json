{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES6"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@site/*": [
                "./*"
            ]
        },
        "types": [
            "@docusaurus/module-type-aliases",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "docs/**/*",
        "blog/**/*",
        "docusaurus.config.local.ts",
        "sidebars.ts"
    ]
}
