# Graphite Configuration
# This file configures Graphite CLI for efficient Git workflow management

[user]
  # Your GitHub username
  name = "jamiescottcraik"

[submit]
  # Auto-submit stacks when all PRs are approved
  auto_submit = true
  # Create draft PRs by default
  draft = false
  # Update PR description from commit messages
  update_description = true
  # Submit strategy for PRs
  strategy = "merge_if_green"
  # Delete merged branches automatically
  delete_merged_branches = true

[stack]
  # Maximum number of commits in a stack
  max_commits = 10
  # Auto-restack when conflicts are detected
  auto_restack = true
  # Protected branches that cannot be rebased
  protected_branches = ["main", "develop", "staging"]

[branch]
  # Default branch prefix for feature branches
  prefix = "feature/"
  # Auto-track upstream branches
  track_upstream = true
  # Include date in branch names
  include_date = false

[pr]
  # Default PR template
  template = ".github/pull_request_template.md"
  # Auto-assign reviewers based on CODEOWNERS
  auto_assign_reviewers = true
  # Default labels for PRs
  default_labels = ["needs-review"]

[workflow]
  # Enable workflow automation
  enabled = true
  # CI checks required before submit
  required_checks = ["lint", "test", "security", "docs"]
  # Timeout for CI checks (minutes)
  timeout = 30

[aliases]
  # Convenient shortcuts for common commands
  sync = "sync --pull"
  submit-all = "submit --stack"
  restack-all = "restack --stack"
  ls-stacks = "ls --stacks"
  log-short = "log --short"
