#!/bin/bash

# Webhook Secret Generator Wrapper
# Quick access script for generating GitHub App webhook secrets

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SECRET_GENERATOR="$SCRIPT_DIR/generate-webhook-secret.cjs"

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "‚ùå Node.js is required but not installed"
    exit 1
fi

# Run the secret generator with all passed arguments
node "$SECRET_GENERATOR" "$@"
