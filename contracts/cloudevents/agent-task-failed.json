{
  "$id": "https://cortex-os.org/contracts/cloudevents/agent-task-failed",
  "title": "Agent Task Failed",
  "description": "Schema for agent task failure events following CloudEvents specification",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "type": {
      "type": "string",
      "const": "agent.task.failed",
      "description": "Event type identifier"
    },
    "source": {
      "type": "string",
      "description": "Event source identifier"
    },
    "specversion": {
      "type": "string",
      "const": "1.0",
      "description": "CloudEvents specification version"
    },
    "time": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp"
    },
    "data": {
      "type": "object",
      "properties": {
        "taskId": {
          "type": "string",
          "format": "uuid",
          "description": "Unique task identifier"
        },
        "error": {
          "type": "string",
          "description": "Error message"
        },
        "errorCode": {
          "type": "string",
          "description": "Error code identifier"
        },
        "executionTime": {
          "type": "number",
          "description": "Execution time in milliseconds before failure"
        },
        "retryable": {
          "type": "boolean",
          "default": false,
          "description": "Whether the task can be retried"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata"
        }
      },
      "required": ["taskId", "error", "executionTime"]
    }
  },
  "required": ["id", "type", "source", "specversion", "time", "data"]
}
