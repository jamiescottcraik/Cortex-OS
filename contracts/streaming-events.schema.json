{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/anthropic/codex/schemas/streaming-events/v1",
    "title": "Codex CLI Streaming Events Schema",
    "description": "JSON schema for events emitted by codex CLI when using --stream-mode json",
    "version": "1.0.0",
    "oneOf": [
        {
            "$ref": "#/definitions/DeltaEvent"
        },
        {
            "$ref": "#/definitions/ItemEvent"
        },
        {
            "$ref": "#/definitions/CompletedEvent"
        }
    ],
    "definitions": {
        "DeltaEvent": {
            "type": "object",
            "description": "Emitted for each token delta as content streams in real-time",
            "required": [
                "type",
                "delta"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "delta"
                },
                "delta": {
                    "type": "string",
                    "description": "Partial text content (token or character sequence)"
                }
            },
            "additionalProperties": false
        },
        "ItemEvent": {
            "type": "object",
            "description": "Emitted when a complete response item (message) is finalized",
            "required": [
                "type",
                "item"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "item"
                },
                "item": {
                    "$ref": "#/definitions/ResponseItem"
                }
            },
            "additionalProperties": false
        },
        "CompletedEvent": {
            "type": "object",
            "description": "Emitted when the streaming turn is completely finished",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "completed"
                }
            },
            "additionalProperties": false
        },
        "ResponseItem": {
            "type": "object",
            "description": "A complete response item - typically a message with role and content",
            "oneOf": [
                {
                    "$ref": "#/definitions/MessageItem"
                }
            ]
        },
        "MessageItem": {
            "type": "object",
            "description": "A message response item with role, content, and optional ID",
            "required": [
                "Message"
            ],
            "properties": {
                "Message": {
                    "type": "object",
                    "required": [
                        "role",
                        "content"
                    ],
                    "properties": {
                        "id": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "description": "Optional unique identifier for the message"
                        },
                        "role": {
                            "type": "string",
                            "enum": [
                                "user",
                                "assistant",
                                "system"
                            ],
                            "description": "The role/speaker of this message"
                        },
                        "content": {
                            "type": "array",
                            "description": "Array of content items that make up the message",
                            "items": {
                                "$ref": "#/definitions/ContentItem"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "ContentItem": {
            "type": "object",
            "description": "A piece of content within a message",
            "oneOf": [
                {
                    "$ref": "#/definitions/InputTextContent"
                },
                {
                    "$ref": "#/definitions/OutputTextContent"
                }
            ]
        },
        "InputTextContent": {
            "type": "object",
            "description": "Text content from user input",
            "required": [
                "InputText"
            ],
            "properties": {
                "InputText": {
                    "type": "object",
                    "required": [
                        "text"
                    ],
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The input text content"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "OutputTextContent": {
            "type": "object",
            "description": "Text content from assistant output",
            "required": [
                "OutputText"
            ],
            "properties": {
                "OutputText": {
                    "type": "object",
                    "required": [
                        "text"
                    ],
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The output text content"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "examples": [
        {
            "type": "delta",
            "delta": "Hello"
        },
        {
            "type": "delta",
            "delta": " world"
        },
        {
            "type": "item",
            "item": {
                "Message": {
                    "id": null,
                    "role": "assistant",
                    "content": [
                        {
                            "OutputText": {
                                "text": "Hello world"
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "completed"
        }
    ]
}
