{
	"compilerOptions": {
		"outDir": "dist",
		"module": "es2022",
		"target": "es2022",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"types": [
			"node"
		],
		"jsx": "react-jsx",
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": false,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"downlevelIteration": true,
		"baseUrl": ".",
		"paths": {
			"@cortex-os/hooks": [
				"packages/hooks/dist/index.d.ts"
			],
			"@cortex-os-app/*": [
				"apps/cortex-os/src/*"
			],
			"@testing/*": [
				"packages/testing/src/*"
			],
			"@security/*": [
				"packages/security/src/*"
			],
			"@utils/*": [
				"packages/utils/src/*"
			],
			"@cortex-os/a2a-core/*": [
				"packages/a2a/a2a-core/src/*"
			],
			"@cortex-os/a2a-transport/*": [
				"packages/a2a/a2a-transport/src/*"
			],
			"@cortex-os/a2a-contracts/*": [
				"packages/a2a/a2a-contracts/src/*"
			],
			"@cortex-os/utils": [
				"libs/typescript/utils/dist/index.d.ts"
			],
			"@cortex-os/asbr-schemas": [
				"libs/typescript/asbr-schemas/dist/index.d.ts"
			],
			"@cortex-os/asbr-schemas/*": [
				"libs/typescript/asbr-schemas/dist/*"
			],
			"@cortex-os/asbr-policy": [
				"libs/typescript/asbr-policy/dist/index.d.ts"
			],
			"@cortex-os/asbr-policy/*": [
				"libs/typescript/asbr-policy/dist/*"
			],
			"@cortex-os/utils/*": [
				"libs/typescript/utils/dist/*"
			],
			"@cortex-os/types": [
				"libs/typescript/types/src/index.ts"
			],
			"@cortex-os/types/*": [
				"libs/typescript/types/src/*"
			],
			"@cortex-os/contracts": [
				"libs/typescript/contracts/dist/src/index.d.ts"
			],
			"@cortex-os/contracts/*": [
				"libs/typescript/contracts/dist/src/*"
			],
			"@cortex-os/telemetry": [
				"libs/typescript/telemetry/src"
			],
			"@cortex-os/mcp": [
				"packages/mcp-core/dist/index.d.ts"
			],
			"@cortex-os/mcp/*": [
				"packages/mcp-core/dist/*"
			],
			"@cortex-os/mcp-core": [
				"packages/mcp-core/dist/index.d.ts"
			],
			"@cortex-os/mcp-core/*": [
				"packages/mcp-core/dist/*"
			],
			"@cortex-os/mcp-transport-bridge": [
				"packages/mcp-transport-bridge/src/index.ts"
			],
			"@cortex-os/mcp-transport-bridge/*": [
				"packages/mcp-transport-bridge/src/*"
			],
			"@cortex-os/mcp-transport": [
				"packages/mcp-transport-bridge/src/index.ts"
			],
			"@cortex-os/mcp-transport/*": [
				"packages/mcp-transport-bridge/src/*"
			],
			"@cortex-os/mcp-registry": [
				"packages/mcp-registry/dist/index.d.ts"
			],
			"@cortex-os/mcp-registry/*": [
				"packages/mcp-registry/dist/*"
			],
			"@cortex-os/rag/*": [
				"packages/rag/src/*"
			],
			"@cortex-os/rag-pipeline/*": [
				"packages/rag/src/pipeline/*"
			],
			"@cortex-os/rag-embed/*": [
				"packages/rag/src/embed/*"
			],
			"@cortex-os/rag-store/*": [
				"packages/rag/src/store/*"
			],
			"@cortex-os/evals": [
				"packages/evals/src/index.ts"
			],
			"@cortex-os/evals/*": [
				"packages/evals/src/*"
			],
			"@cortex-os/simlab": [
				"packages/simlab/src/index.ts"
			],
			"@cortex-os/simlab/*": [
				"packages/simlab/src/*"
			],
			"@cortex-os/agents": [
				"packages/agents/src/index.ts"
			],
			"@cortex-os/agents/*": [
				"packages/agents/src/*"
			],
			"@cortex-os/asbr": [
				"packages/asbr/src/index.ts"
			],
			"@cortex-os/asbr/*": [
				"packages/asbr/src/*"
			],
			"@cortex-os/kernel": [
				"packages/kernel/src/index.ts"
			],
			"@cortex-os/kernel/*": [
				"packages/kernel/src/*"
			],
			"@cortex-os/mcp-server": [
				"packages/mcp-server/src/index.ts"
			],
			"@cortex-os/mcp-server/*": [
				"packages/mcp-server/src/*"
			],
			"@cortex-os/mcp-bridge": [
				"packages/mcp-bridge/src/index.ts"
			],
			"@cortex-os/mcp-bridge/*": [
				"packages/mcp-bridge/src/*"
			],
			"@cortex-os/memories": [
				"packages/memories/src/index.ts"
			],
			"@cortex-os/memories/*": [
				"packages/memories/src/*"
			],
			"@cortex-os/mvp": [
				"packages/mvp/src/index.ts"
			],
			"@cortex-os/mvp/*": [
				"packages/mvp/src/*"
			],
			"@cortex-os/mvp-server": [
				"packages/mvp-server/src/index.ts"
			],
			"@cortex-os/mvp-server/*": [
				"packages/mvp-server/src/*"
			],
			"@cortex-os/prp-runner": [
				"packages/prp-runner/src/index.ts"
			],
			"@cortex-os/prp-runner/*": [
				"packages/prp-runner/src/*"
			],
			"@cortex-os/mvp-core": [
				"packages/mvp-core/src/index.ts"
			],
			"@cortex-os/mvp-core/*": [
				"packages/mvp-core/src/*"
			],
			"@cortex-os/model-gateway/*": [
				"packages/model-gateway/src/*"
			],
			"@cortex-os/orchestration": [
				"packages/orchestration/src/index.ts"
			],
			"@cortex-os/orchestration/*": [
				"packages/orchestration/src/*"
			],
			"@brain/*": [
				"apps/cortex-os/packages/*"
			],
			"@brain/evidence/*": [
				"apps/cortex-os/packages/evidence/*"
			],
			"@brain/ingest/*": [
				"apps/cortex-os/packages/ingest/src/*"
			],
			"@brain/planner/*": [
				"apps/cortex-os/packages/planner/*"
			],
			"@orchestration/*": [
				"apps/cortex-os/packages/planner/orchestration/src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"external/**",
		"vendor/**",
		"**/*.config.js",
		"**/*.config.ts",
		"scripts/**/*.mjs",
		"scripts/**/*.js",
		"scripts/**/*template*.ts",
		"scripts/**/*-class.ts",
		"scripts/**/*-standalone.ts",
		"**/dist/**",
		"**/build/**",
		"**/*.d.ts",
		"**/*.spec.ts",
		"**/test/**",
		"security_backups/**",
		"**/__*/**",
		"apps/cortex-os/brain/**"
	],
	"references": [
		{
			"path": "tools/tsconfig.json"
		}
	]
}