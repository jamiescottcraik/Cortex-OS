{
	"compilerOptions": {
		"outDir": "dist",
		"module": "es2022",
		"target": "es2022",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"types": [
			"node"
		],
		"jsx": "react-jsx",
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": false,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"downlevelIteration": true,
		"baseUrl": ".",
		"paths": {
			"@cortex-os/*": [
				"packages/*/dist/index.d.ts",
				"packages/*/src/index.ts"
			],
			"@cortex-os/agents": [
				"packages/agents/dist/index.d.ts",
				"packages/agents/src/index.ts"
			],
			"@cortex-os/agents/*": [
				"packages/agents/dist/*",
				"packages/agents/src/*"
			],
			"@cortex-os/kernel": [
				"packages/kernel/dist/index.d.ts",
				"packages/kernel/src/index.ts"
			],
			"@cortex-os/kernel/*": [
				"packages/kernel/dist/*",
				"packages/kernel/src/*"
			],
			"@cortex-os/prp-runner": [
				"packages/prp-runner/dist/index.d.ts",
				"packages/prp-runner/src/index.ts"
			],
			"@cortex-os/prp-runner/*": [
				"packages/prp-runner/dist/*",
				"packages/prp-runner/src/*"
			],
			"@cortex-os/cortex-sec": [
				"packages/cortex-sec/dist/index.d.ts",
				"packages/cortex-sec/src/index.ts"
			],
			"@cortex-os/cortex-sec/*": [
				"packages/cortex-sec/dist/*",
				"packages/cortex-sec/src/*"
			],
			"@cortex-os/a2a-core": [
				"packages/a2a/a2a-core/dist/index.d.ts",
				"packages/a2a/a2a-core/src/index.ts"
			],
			"@cortex-os/a2a-core/*": [
				"packages/a2a/a2a-core/dist/*",
				"packages/a2a/a2a-core/src/*"
			],
			"@cortex-os/utils": [
				"libs/typescript/utils/dist/index.d.ts",
				"libs/typescript/utils/src/index.ts"
			],
			"@cortex-os/utils/*": [
				"libs/typescript/utils/dist/*",
				"libs/typescript/utils/src/*"
			],
			"@cortex-os/hooks/src/loaders.js": [
				"packages/hooks/dist/loaders.d.ts"
			],
			"@cortex-os/hooks/*": [
				"packages/hooks/dist/*",
				"packages/hooks/src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"external/**",
		"vendor/**",
		"**/*.config.js",
		"**/*.config.ts",
		"scripts/**/*.mjs",
		"scripts/**/*.js",
		"scripts/**/*template*.ts",
		"scripts/**/*-class.ts",
		"scripts/**/*-standalone.ts",
		"**/dist/**",
		"**/build/**",
		"**/*.d.ts",
		"**/*.spec.ts",
		"**/test/**",
		"security_backups/**",
		"**/__*/**",
		"apps/cortex-os/brain/**"
	],
	"references": [
		{
			"path": "tools/tsconfig.json"
		}
	]
}
