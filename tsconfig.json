{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": true,
        "types": []
    },
    "include": [
        "simple-tests/**/*.ts",
        "libs/**/*.ts",
        "packages/**/*.ts",
        "apps/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}