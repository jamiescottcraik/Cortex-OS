{
	"*.{ts,tsx,js,jsx,cjs,mjs}": [
		"eslint --fix",
		"ast-grep scan --config sgconfig.json --report-style rich",
		"rg 'console\\.(log|warn|error|debug|info)' {} || true",
		"rg 'debugger' {} || true",
		"rg 'TODO|FIXME|XXX|HACK' {} || true"
	],
	"*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}": ["prettier -w"]
}
