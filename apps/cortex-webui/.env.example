# Cortex WebUI Docker Compose Environment Configuration
# Copy this file to .env and configure with your actual values

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=3001

# Backend Configuration
PORT=3001
NODE_ENV=production
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters_change_this_in_production
FRONTEND_URL=http://localhost:3000

# Frontend Configuration  
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001/ws

# Database
DATABASE_PATH=/app/data/cortex.db

# Security - Generate strong secrets for production
# Use: openssl rand -hex 32
JWT_SECRET=please_change_this_to_a_secure_random_string_in_production

# Docker Compose Settings
COMPOSE_PROJECT_NAME=cortex-webui
COMPOSE_HTTP_TIMEOUT=120