# Cortex WebUI Docker Compose Environment Configuration
# Copy this file to .env and configure with your actual values

# Port Configuration
FRONTEND_PORT=3012
BACKEND_PORT=3033

# Backend Configuration
PORT=3033
NODE_ENV=production
FRONTEND_URL=http://localhost:3012
DATABASE_PATH=/app/data/cortex.db

# Security - use `node scripts/generate-secret.js` to create a strong value
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION

# Model API Configuration
MODEL_API_PROVIDER=ollama
MODEL_API_BASE=http://localhost:11434
MODEL_API_KEY=

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3033/api
VITE_WS_URL=ws://localhost:3033/ws

# Docker Compose Settings
COMPOSE_PROJECT_NAME=cortex-webui
COMPOSE_HTTP_TIMEOUT=120
