{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@cortex-os/a2a-contracts": [
        "../../../packages/a2a/a2a-contracts/dist/index.d.ts"
      ],
      "@cortex-os/a2a-contracts/*": [
        "../../../packages/a2a/a2a-contracts/dist/*"
      ],
      "@cortex-os/a2a-core": [
        "../../../packages/a2a/a2a-core/dist/index.d.ts"
      ],
      "@cortex-os/a2a-core/*": [
        "../../../packages/a2a/a2a-core/dist/*"
      ],
      "@cortex-os/a2a-transport/inproc": [
        "../../../packages/a2a/a2a-transport/dist/inproc.d.ts"
      ],
      "@cortex-os/a2a-transport/inproc.js": [
        "../../../packages/a2a/a2a-transport/dist/inproc.d.ts"
      ],
      "@cortex-os/telemetry": [
        "../../../libs/typescript/telemetry/src/index.ts"
      ],
      "@cortex-os/telemetry/*": [
        "../../../libs/typescript/telemetry/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*",
    "__tests__/**/*",
    "test/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
