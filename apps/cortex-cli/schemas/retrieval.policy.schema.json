{
	"$id": "https://example.com/schemas/retrieval.policy.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Retrieval Policy",
	"type": "object",
	"properties": {
		"defaults": {
			"type": "object",
			"properties": {
				"strategy": { "type": "string" },
				"max_pages": { "type": ["integer", "null"], "minimum": 0 }
