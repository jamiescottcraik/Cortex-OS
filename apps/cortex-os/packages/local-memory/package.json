{
    "name": "@cortex-os/local-memory",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./auth": {
            "types": "./dist/auth/index.d.ts",
            "import": "./dist/auth/index.js"
        },
        "./telemetry": {
            "types": "./dist/observability/index.d.ts",
            "import": "./dist/observability/index.js"
        }
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:safe": "node ../../../../scripts/vitest-safe.mjs run",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "@cortex-os/memories": "workspace:*",
        "@cortex-os/telemetry": "workspace:*",
        "@cortex-os/contracts": "workspace:*",
        "@cortex-os/utils": "workspace:*",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/instrumentation": "^0.45.0",
        "zod": "^3.25.76",
        "pino": "^8.16.0"
    },
    "devDependencies": {
        "@types/node": "^22.18.1",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.35.0",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}