{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@cortex-os/*": [
                "../../../../packages/*/dist/index.d.ts",
                "../../../../packages/*/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__",
        "src/evaluation/**/*",
        "src/observability/**/*",
        "src/auth/**/*",
        "src/retrieval/**/*"
    ],
    "extends": "../../../../tsconfig.base.json"
}
