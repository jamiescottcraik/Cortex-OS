{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"types": ["node"],
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
