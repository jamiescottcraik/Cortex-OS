{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2015",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"types": [
			"node"
		],
		"baseUrl": ".",
		"downlevelIteration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}