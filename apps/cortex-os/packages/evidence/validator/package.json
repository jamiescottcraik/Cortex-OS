{
	"name": "@cortex-os/evidence-validator",
	"version": "1.0.0",
	"private": true,
	"description": "Validates evidence for Cortex OS security and compliance",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"typecheck": "pnpm -w exec tsc -p apps/cortex-os/packages/evidence/validator/tsconfig.typecheck.json --noEmit",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:watch": "vitest --watch",
		"test:accessibility": "echo 'No UI components in evidence-validator package'",
		"lint": "eslint src",
		"format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
	},
	"keywords": [
		"evidence",
		"validation",
		"security",
		"compliance"
	],
	"author": "Cortex OS Team",
	"license": "(Apache-2.0 OR Commercial)",
	"engines": {
		"node": ">=18.0.0"
	}
}
