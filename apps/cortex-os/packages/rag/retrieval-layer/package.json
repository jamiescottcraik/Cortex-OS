{
  "name": "@cortex-os/retrieval-layer",
  "version": "0.1.0",
  "description": "Retrieval layer with ANN search and reranking for Cortex OS documentation generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "pnpm -w exec tsc -p apps/cortex-os/brain/rag/retrieval-layer/tsconfig.typecheck.json --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:accessibility": "echo 'No UI components in retrieval-layer package'",
    "lint": "eslint src --ext .ts",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "faiss-node": "^0.5.1",
    "hnswlib-node": "^1.4.2",
    "sqlite3": "^5.1.7",
    "vectordb": "^0.4.0",
    "zod": "^3.23.8",
    "better-sqlite3": "^9.2.2",
    "ollama": "^0.5.9"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.33.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "retrieval",
    "ann",
    "faiss",
    "hnswlib",
    "reranking",
    "search",
