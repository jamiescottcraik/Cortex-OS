{
  "name": "cortex-os",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cortex-os/src",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/cortex-os",
        "tsConfig": "apps/cortex-os/tsconfig.app.json",
        "project": "apps/cortex-os/package.json",
        "entryFile": "apps/cortex-os/src/index.ts",
        "external": ["rxjs/operators", "rxjs/websocket", "rxjs/ajax"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "cortex-os:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/cortex-os/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "configFile": "apps/cortex-os/vitest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "coverage": true
        }
      }
    }
  },
  "tags": ["scope:app", "type:app"],
  "implicitDependencies": ["asbr", "a2a", "mcp", "memories", "orchestration"],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ]
  }
}
