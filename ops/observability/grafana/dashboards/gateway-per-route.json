{
  "title": "Cortex-OS Gateway (Per Route)",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["cortex-os", "gateway", "per-route"],
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "route",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 2,
        "query": "label_values(http_request_duration_ms_bucket{job=\"cortex/gateway\"}, route)",
        "includeAll": false,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "p95 (ms)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket{job=\"cortex/gateway\", route=~\"$route\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "horizontal"
      },
      "fieldConfig": { "defaults": { "unit": "ms", "decimals": 0 }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Error Rate",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_request_errors_total{job=\"cortex/gateway\", route=~\"$route\"}[5m])) / sum(rate(http_request_duration_ms_count{job=\"cortex/gateway\", route=~\"$route\"}[5m]))",
          "legendFormat": "error rate"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" } },
      "fieldConfig": { "defaults": { "unit": "percentunit", "decimals": 2 }, "overrides": [] }
    },
    {
      "type": "timeSeries",
      "title": "Latency (p50/p95/p99)",
      "gridPos": { "x": 0, "y": 6, "w": 16, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_ms_bucket{job=\"cortex/gateway\", route=~\"$route\"}[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket{job=\"cortex/gateway\", route=~\"$route\"}[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"cortex/gateway\", route=~\"$route\"}[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] }
    },
    {
      "type": "timeSeries",
      "title": "RPS",
      "gridPos": { "x": 0, "y": 14, "w": 16, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_ms_count{job=\"cortex/gateway\", route=~\"$route\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    }
  ]
}
