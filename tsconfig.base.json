{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@cortex-os/contracts": [
        "libs/typescript/contracts/dist/src/index.d.ts"
      ],
      "@cortex-os/lib": [
        "src/lib/index.ts"
      ],
      "@cortex-os/rag": [
        "packages/rag/src/index.ts"
      ],
      "@cortex-os/rag/*": [
        "packages/rag/src/*"
      ],
      "@cortex-os/rag-embed/*": [
        "packages/rag/src/embed/*"
      ],
      "@cortex-os/rag-pipeline/*": [
        "packages/rag/src/pipeline/*"
      ],
      "@cortex-os/rag-store/*": [
        "packages/rag/src/store/*"
      ],
      "@cortex-os/*": [
        "packages/*/src/index.ts"
      ],
      "@cortex/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "**/dist",
    "**/.nx"
  ]
}