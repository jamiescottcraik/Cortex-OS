{
  "extends": "../../../tsconfig.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@cortex-os/policy": [
        "packages/policy/src/index.ts"
      ]
    }
  }
}
