{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "emitDeclarationOnly": false,
        "composite": true,
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ]
}